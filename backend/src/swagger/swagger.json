{
  "openapi": "3.0.0",
  "info": {
    "title": "Parking Management system",
    "version": "1.0.0",
    "description": "API for managing users and employees",
    "contact": {
      "name": "API Support",
      "email": "support@example.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:4001"
    }
  ],
    "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "tags":[
    {
      "name":"User",
      "description":"User endpoints"
    },
    {
      "name":"Parking",
      "description":"Parking endpoints"
    }
  ],
  "paths": {
    "/api/auth/register": {
      "post": {
        "tags":["User"],
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstname":{ "type": "string" },
                  "lastname": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "role": { "type": "string", "default": "parking attendant"}
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "User registered successfully" },
          "400": { "description": "Validation error" },
          "409": { "description": "User already exists" },
          "500": { "description": "Internal Server error" }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags":["User"],
        "summary": "User login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User logged in successfully"
          },
          "401": {
            "description": "Invalid email or password"
          },
          "400": { "description": "Validation error" },
          "500":{
            "description":"Internal Server error"
          }
        }
    }
    },
    "/api/parking/create": {
      "post": {
        "tags": ["Parking"],
        "summary": "Create a new parking",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": { "type": "string" },
                  "name": { "type": "string" },
                  "totalspaces":{ "type": "integer"},
                  "Location":{"type":"string"},
                  "feePerHour":{"type":"float"}
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Employee created successfully" },
          "422": { "description": "Validation error" },
          "409": { "description": "Employee already exists" },
          "500": { "description": "Internal Server error" }
        },
        "security":[
            {
              "bearerAuth":[]
            }
        ]
      }
    },
    "/api/parking": {
      "get": {
        "tags": ["Parking"],
        "summary": "Get all employees",
        "security":[
            {
              "bearerAuth":[]
            }
          ],
        "responses": {
          "200": { "description": "List of employees" },
          "500": { "description": "Internal Server error" }
        }
      }
    }
  }
}}
